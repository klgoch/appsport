<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="vicer.appsport.registro">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Mote"
        android:ems="10"
        android:layout_below="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:id="@+id/editText2" />

    <TextView
        android:text="Todos los campos son obligatorios y es necesario que ingreses datos reales ya que sera registro unico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Nombre y apellido"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:id="@+id/pais"
        android:layout_below="@+id/editText2"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/estado"
        android:layout_below="@+id/pais"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Al crear una cuenta estas aceptando nuestros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/confirmacion"
        android:layout_below="@+id/registrar"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Politica de datos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/politicas"
        android:layout_marginEnd="23dp"
        android:textColor="#B71C1C"
        android:layout_below="@+id/confirmacion"
        android:layout_alignEnd="@+id/confirmacion" />

    <TextView
        android:text="Terminos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/terminos"
        android:textColor="#B71C1C"
        android:layout_marginEnd="32dp"
        android:layout_below="@+id/confirmacion"
        android:layout_toStartOf="@+id/politicas" />

    <Button
        android:text="Crear cuenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/registrar"
        android:textSize="14sp"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_below="@+id/repeatpassword"
        android:layout_centerHorizontal="true"
        android:background="#37474F"
        android:textColor="#ffffff" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/repeatpassword"
        android:text="password"
        android:layout_below="@+id/confpass"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email"
        android:text="email"
        android:layout_above="@+id/pass"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:text="password"
        android:layout_below="@+id/estado"
        android:layout_alignParentStart="true"
        android:layout_marginTop="54dp" />

    <TextView
        android:text="Confirma password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/confpass"
        android:layout_below="@+id/password"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pass"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
